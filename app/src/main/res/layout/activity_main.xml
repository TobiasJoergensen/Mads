<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tobia.myapplication.MainActivity">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@drawable/nav_item_color_state"
        app:itemTextColor="@drawable/nav_item_color_state"
        app:menu="@menu/menu_nav">
    </android.support.design.widget.BottomNavigationView>

    <Button
        android:id="@+id/custom_tours"
        android:text="Custom Tours"
        android:textAlignment="viewStart"
        android:gravity="bottom"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_above="@id/bottom_navigation"
        android:background="@drawable/button_border" />

    <Button
        android:id="@+id/suggested_tours"
        android:text="Suggested Tours"
        android:textAlignment="viewStart"
        android:gravity="bottom"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_above="@id/custom_tours"
        android:background="@drawable/button_border"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/thing"
        android:text="Possible to choose time here?"
        android:textAlignment="center"
        android:textColor="#333"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_below="@+id/info_textview"
        android:layout_above="@+id/suggested_tours"
        android:background="@drawable/button_border"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/info_textview"
        android:text="Aalborg"
        android:textAlignment="center"
        android:textColor="#333"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="@drawable/button_border"/>

</RelativeLayout>
