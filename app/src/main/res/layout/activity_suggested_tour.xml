<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tobia.myapplication.SuggestedTour">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@drawable/nav_item_color_state"
        app:itemTextColor="@drawable/nav_item_color_state"
        app:menu="@menu/menu_nav"
        >
    </android.support.design.widget.BottomNavigationView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/info_textview"
        android:text="Categories"
        android:textAlignment="center"
        android:textColor="#333"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="@drawable/button_border"/>

    <Button
        android:id="@+id/backBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:paddingTop="15dp"
        android:gravity="center"
        android:background="@drawable/ic_arrow_back"
        android:layout_alignBaseline="@+id/info_textview"
        android:layout_alignBottom="@+id/info_textview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/history"
        android:text="History"
        android:textAlignment="viewStart"
        android:gravity="bottom"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_below="@id/info_textview"
        android:background="@drawable/button_border" />

    <Button
        android:id="@+id/art"
        android:text="Art"
        android:textAlignment="viewStart"
        android:gravity="bottom"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_below="@id/history"
        android:background="@drawable/button_border" />

    <Button
        android:id="@+id/familyFun"
        android:text="Family Fun"
        android:textAlignment="viewStart"
        android:gravity="bottom"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_below="@id/art"
        android:background="@drawable/button_border" />

    <Button
        android:id="@+id/cityLife"
        android:text="City Life"
        android:textAlignment="viewStart"
        android:gravity="bottom"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_below="@id/familyFun"
        android:background="@drawable/button_border" />

    <Button
        android:id="@+id/shopping"
        android:text="Shopping"
        android:textAlignment="viewStart"
        android:gravity="bottom"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_below="@id/cityLife"
        android:background="@drawable/button_border" />

</RelativeLayout>
